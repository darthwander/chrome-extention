{
  "manifest_version": 3,
  "name": "Time Tracker",
  "version": "1.0.0",
  "description": "Inicia/encerra tracking de tempo em itens de trabalho suportados.",
  "permissions": ["storage", "activeTab"],
  "host_permissions": [
    "https://dev.azure.com/*",
    "https://*.visualstudio.com/*",
    "*://*/glpi/*",
    "*://*/front/ticket.form.php*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "options_page": "options.html",
  "content_scripts": [
    {
      "matches": [
        "https://dev.azure.com/*",
        "https://*.visualstudio.com/*",
        "*://*/glpi/*",
        "*://*/front/ticket.form.php*"
      ],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_title": "Time Tracker",
    "default_popup": "popup.html"
  }
}
